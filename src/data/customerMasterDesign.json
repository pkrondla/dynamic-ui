        { "id": "customerSegment", "label": "Customer Segment", "visible": true, "tabOrder": 27, "type": "select", "options": ["Premium", "Standard", "Basic"] },
        { "id": "salesPerson", "label": "Sales Person", "visible": true, "tabOrder": 28, "type": "text" },
        { "id": "notes", "label": "Notes", "visible": true, "tabOrder": 29, "type": "textarea" }
      ]
    }
  ]
} 